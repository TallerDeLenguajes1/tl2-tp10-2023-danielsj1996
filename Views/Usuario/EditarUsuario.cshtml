@{
    ViewData["Title"] = "Editar Usuario";
}

@model tl2_tp10_2023_danielsj1996.ViewModels.EditarUsuarioViewModel

<h1>@ViewData["Title"]</h1>
<form asp-controller="Usuario" asp-action="ConfirmarEditarUsuario" method="post">
    <input asp-for="IdUsuario" type="hidden" />
    <div class="mb-3">
        <label class="form-label" asp-for="NombreDeUsuario">Nombre de Usuario</label>
        <input type="text" asp-for="NombreDeUsuario" class="form-control" />
        <span asp-validation-for="NombreDeUsuario" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Contrasenia">Contrase√±a</label>
        <input type="text" asp-for="Contrasenia" class="form-control" />
        <span asp-validation-for="Contrasenia" class="text-danger"></span>
    </div>
    <div class="input-group mb-3">
        <label asp-for="NivelDeAcceso" class="input-group-text">Rol</label>
        <select asp-for="NivelDeAcceso" class="form-select" asp-items="@Html.GetEnumSelectList<NivelDeAcceso>()">
            <option value="" selected disabled> ---Seleccionar--- </option>
        </select>
        <span asp-validation-for="NivelDeAcceso" class="text-danger"></span>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-success">Actualizar</button>
        <a asp-controller="Usuario" asp-action="MostrarTodosUsuarios" class="btn btn-danger">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}