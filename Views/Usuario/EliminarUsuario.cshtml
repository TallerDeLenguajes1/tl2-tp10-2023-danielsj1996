@{
    ViewData["Title"] = "Eliminar Usuario";
}

@model tl2_tp10_2023_danielsj1996.Models.Usuario

<h2>Confirmar eliminación</h2>
<div>
    <p>Si continua está eliminando al usuario:  <strong>"@Model.NombreDeUsuario"</strong>?</p>
</div>
<form asp-controller="Usuario" asp-action="ConfirmarEliminar" method="post">
    <input asp-for="@Model.IdUsuario" type="hidden" />
    <div class="col-12">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-controller="Usuario" asp-action="MostrarTodosUsuarios" class="btn btn-secondary">Cancelar</a>
    </div>
</form>