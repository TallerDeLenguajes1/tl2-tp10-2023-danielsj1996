@{
    ViewData["Title"] = "Modificar Usuario";

}

@model tl2_tp10_2023_danielsj1996.ViewModels.EditarUsuarioViewModel
<h1>@ViewData["Title"]</h1>

<form asp-controller="Usuario" asp-action="ModificarUsuarioFromForm" method="post">
    <input hidden asp-for="@Model.Id" />

    <div class="form-gruop">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" id="nombre" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>
        <div class="form-group">
        <label asp-for="@Model.Contrasenia"></label>
        <input asp-for="@Model.Contrasenia" class="form-control" id="id" />
        <span asp-validation for="@Model.Contrasenia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nivel"></label>
        <select asp-for="@Model.Nivel" asp-items="Html.GetEnumSelectList<NivelDeAcceso>()" class="form-control" />
        <option value="">Seleccionar Nivel de Acceso</option>
        </select>
        <span asp-validation-for="@Model.Nivel" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Actualizar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}