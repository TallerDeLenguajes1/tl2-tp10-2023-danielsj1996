@{
    ViewData["Title"] = "Usuarios";
}

@model List<tl2_tp10_2023_danielsj1996.ViewModels.ListarUsuarioViewModel>

<h2>Usuario List</h2>

<table class="table table-dark">
    <thead>
            <tr>
                <a asp-controller="Tablero" asp-action="Index" asp-route-idUsuario=null>Ver Tableros de Todos los Usuarios</a>
            </tr>
        <tr>
            <th>ID #</th>
            <th>Nombre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Id</td>
                <td>@usuario.Nombre</td>
                <td>
                    <a asp-controller="Tablero" asp-action="Index" asp-route-idUsuario="@usuario.Id">Ver Tableros de este Usuario</a>
                    <a asp-controller="Usuario" asp-action="EditarUsuario" asp-route-idUsuario="@usuario.Id">Editar</a>
                    <a asp-controller="Usuario" asp-action="EliminarUsuario" asp-route-idUsuario="@usuario.Id" onclick="return confirm('¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>                      
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <a asp-controller="Usuario" asp-action="AgregarUsuario">Agregar Usuario</a>
        </tr>
    </tfoot>
</table>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }