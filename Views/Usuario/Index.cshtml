@{
    ViewData["Title"] = "Usuarios";
}

@model List<tl2_tp10_2023_danielsj1996.ViewModels.ListarUsuarioViewModel>


<h2>Lista de Usuarios</h2>

<table class="table table-dark">

    <thead>
        <tr>
            <a asp-controller="Tablero" asp-action="Index" asp-route-idUSuario=null>Ver Tableros de Todos los
                Usuarios</a>
        </tr>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Nivel de acceso</th>
            <th></th>
            <th></th>
        </tr>

    </thead>

    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Id</td>
                <td>@usuario.Nombre</td>
                <td>@usuario.Nivel</td>
                <td></td>
                <td>
                    <a asp-controller="Tablero" asp-action="Index" asp-route-idUsuario="@usuario.Id">Ver Tableros del Usuario</a>
                    <a asp-controller="Usuario" asp-action="ModificarUsuario">Modificar</a>
                    <a asp-controller="Usuario" asp-action="EliminarUsuario" asp-route-idUsuario="@usuario.Id"
                        onclick="return confirm('¿Estas seguro de eliminar este Usuario?')">Eliminar</a>

                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <a asp-controller="Usuario" asp-action="CrearUsuario">Crear nuevo Usuario</a>
        </tr>
    </tfoot>
</table>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}