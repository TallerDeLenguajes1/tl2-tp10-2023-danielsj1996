@{
    ViewData["Title"] = "Usuarios";
}

<h2>Opciones de Usuario</h2>

<table class="table">
    <form asp-controller="Usuario" asp-action="BuscarUsuarioPorNombre" method="get" class="w-100">
        <div class="input-group mb-3">
            <input type="text" name="nombre" class="form-control" placeholder="Nombre de usuario"
                aria-label="Nombre de usuario" aria-describedby="button-addon2">
            <button class="btn btn-primary" type="submit" id="button-addon2"><i class="fas fa-search"></i></button>
        </div>
    </form>

    <a asp-controller="Usuario" asp-action="CrearUsuario"
        class="list-group-item list-group-item-action bg-success text-white mb-3"><i
            class="fas fa-user-plus me-2"></i>Crear Nuevo Usuario</a>

    <a asp-controller="Usuario" asp-action="MostrarTodosLosUsuarios"
        class="list-group-item list-group-item-action bg-primary text-white ">
        <i class="fas fa-users me-2"></i>Mostrar Todos los Usuarios
    </a>
</table>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}