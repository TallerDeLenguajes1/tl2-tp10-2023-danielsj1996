@{
    ViewData["Title"] = "Tableros";
}
@model List<tl2_tp10_2023_danielsj1996.ViewModels.ListarTableroViewModel>

<h2>@ViewData["Title"]</h2>

<div class="table table">
    <table>
        <thead>

            <tr>
                <th>Id</th>
                <th>IdUsuarioPropietario</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tablero in Model)
            {

                <tr>
                    <td>@tablero.Id</td>
                    <td>@tablero.IdUsuarioPropietario</td>
                    <td>@tablero.Nombre</td>
                    <td>@tablero.Descripcion</td>
                    <td>@tablero.Estado</td>
                    <td>
                        <a asp-controller="Tarea" asp-action="MostrarTareaDeTablero" asp-route-idTablero="@tablero.Id">Ver Tareas del
                            Tablero</a>
                    </td>
                </tr>
            }
        </tbody>



    </table>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }