@using tl2_tp10_2023_danielsj1996.Models
@{
    ViewData["Title"] = "Creacion de Tablero";
}
@model tl2_tp10_2023_danielsj1996.ViewModels.CrearTableroViewModel

<h1 class="text-center mb-4">Crear Tablero</h1>
<form asp-controller="Tablero" asp-action="ConfirmarCrearTablero" method="post">
    <div class="form-group">
        <label asp-for="@Model.NombreDeTablero" class="form-label">Nombre Del Tablero</label>
        <input type="text" asp-for="@Model.NombreDeTablero" class="form-control" />
        <span asp-validation-for="@Model.NombreDeTablero" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.DescripcionDeTablero" class="form-label">Descripcion del Tablero</label>
        <input asp-for="@Model.DescripcionDeTablero" class="form-control" />
        <span asp-validation-for="@Model.DescripcionDeTablero" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.IdUsuarioPropietario" class="input-group-text">Propietario del Tablero</label>
        <select asp-for="@Model.IdUsuarioPropietario" class="form-select">
            <option value="" selected disabled>--- Seleccionar ---</option>
            @foreach (var usuario in Model.ListadoUsuarios!)
            {
                <option value="@usuario.IdUsuario">@usuario.NombreDeUsuario</option>
            }
        </select>
        <span asp-validation-for="@Model.IdUsuarioPropietario" class="text-danger"></span>
    </div>



    <button type="submit" class="btn btn-primary">Crear Tablero</button>
    <a asp-controller="Tablero" asp-action="Index" class="btn btn-danger" type="submit">Cancelar</a>



</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}