@{ 
    ViewData["Title"] = "Eliminar Tablero";
}

@model tl2_tp10_2023_danielsj1996.Models.Tablero

<h2>Eliminar Tablero</h2>

<div>
    <p>¿Estás seguro de que deseas eliminar el Tablero <strong>"@Model.NombreDeTablero"</strong>?</p>
    <dl>

        <dt>Nombre del Tablero:</dt>
        <dd>@Model.NombreDeTablero</dd>
        <dt>Descripcion:</dt>
        <dd>@Model.DescripcionDeTablero</dd>
    </dl>
    <form asp-controller="Tablero"asp-action="ConfirmarEliminacionTablero" method="post">
        <input type="hidden" asp-for="@Model.IdTablero" />
        <button type="submit" class="btn btn-danger">Confirmar Eliminación</button>
        <a asp-controller="Tablero"asp-action="MostrarTodosLosTableros" class="btn btn-secondary">Cancelar</a>
    </form>
</div>