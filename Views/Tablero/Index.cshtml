@{
    ViewData["Title"] = "Tableros";
}
@model List<tl2_tp10_2023_danielsj1996.ViewModels.ListarTableroViewModel>

<h2>@ViewData["Title"]</h2>

<div class="table table-grey">
    <table>
        <thead>
            <tr>
                <a asp-controller="Tarea" asp-action="Index" asp-route-idTablero=null>Ver Tareas de Todos los
                    Tableros</a>
            </tr>
            <tr>
                <th hidden>Id</th>
                <th>IdUsuarioPropietario</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tablero in Model)
            {

                <tr>
                    <td hidden>@tablero.Id</td>
                    <td>@tablero.IdUsuarioPropietario</td>
                    <td>@tablero.Nombre</td>
                    <td>@tablero.Descripcion</td>
                    <td>

                        <a asp-controller="Tarea" asp-action="Index" asp-route-idTablero="@tablero.Id">Ver Tareas del
                            Tablero</a>
                        <a asp-controller="Tablero" asp-action="EditarTablero" asp-route-idTablero="@tablero.Id">Editar</a>
                        <a asp-controller="Tablero" asp-action="EliminarTablero" asp-route-idTablero="@tablero.Id"
                            onclick="return confirm('Â¿Estas seguro de eliminar el Tablero?')">Eliminar Tablero</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <a asp-controller="Tablero" asp-action="AgregarTablero"> AgregarTablero</a>
            </tr>

        </tfoot>


    </table>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }