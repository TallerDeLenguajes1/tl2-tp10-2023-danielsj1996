@model List<Tablero>

<div>
    <a asp-controller="Tablero" asp-action="AgregarTablero">Agregar Tablero</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id Tablero</th>
            <th scope="col">Nombre de Tablero</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Id Propietario</th>
            <th scope="col">Ops</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tablero in Model)
        {
            <tr>
                <th scope="row">
                    @tablero.IdTablero
                </th>
                <td>@tablero.NombreDeTablero</td>
                <td>@tablero.DescripcionDeTablero</td>
                <td>@tablero.IdUsuarioPropietario</td>
                <td>
                    <a asp-controller="Tablero" asp-action="ModificarTablero" asp-route-id="@tablero.IdTablero">Editar</a>
                    <a asp-controller="Tablero" asp-action="EliminarTablero" asp-route-id="@tablero.IdTablero">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
