@model tl2_tp10_2023_danielsj1996.ViewModels.CrearTableroViewModel


<h1>@ViewData["Title"]</h1>
<form asp-controller="Tablero" asp-action="AgregarTablero" method="post">
    <div class="form-group">
        <label asp-for="@Model.Id"></label>
        <input asp-for="@Model.Id" class="form-control" id="id" />
        <span asp-validation-for="@Model.Id" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.IdUsuarioPropietario"></label>
        <input asp-for="@Model.IdUsuarioPropietario" class="form-control" id="id" />
        <span asp-validation-for="@Model.IdUsuarioPropietario" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" id="id" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input asp-for="@Model.Descripcion" class="form-control" id="id" />
        <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>

    </div>
    <button type="submit" class="btn btn-success">Agregar</button>

</form>

@section Scripts {<partial name="_ValidationScriptsPartial"/>}